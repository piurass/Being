<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Being"
             x:Class="Being.MainPage">

    <ContentPage.Content>
        <ScrollView Orientation="Vertical" Padding="0" VerticalOptions="FillAndExpand">
            <StackLayout Padding="20" Spacing="20">
                <Label x:Name="Resposta" Text="Oi eu sou o Being!" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                <Label x:Name="MinhaMensagem" Text="" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                <Entry x:Name="Mensagem" Placeholder="escreva alguma coisa..." />
                <Button x:Name="Enviar" Text="Enviar" Clicked="Enviar_Clicked"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>
